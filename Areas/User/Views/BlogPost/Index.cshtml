@{
    ViewData["Title"] = "Create Blog";
}

<!-- ================================ START QUESTION AREA ================================= -->
<section class="question-area pt-40px pb-40px">
    <div class="container">
        <!--align-items-center -->
        <div class="filters pb-40px d-flex flex-wrap justify-content-between">
            <h3 class="fs-22 fw-medium mr-0">Post a Question</h3>
            <ul class="breadcrumb-list">
                <li><a href="#">Home</a><span><svg xmlns="http://www.w3.org/2000/svg" height="19px" viewBox="0 0 24 24" width="19px" fill="#000000"><path d="M0 0h24v24H0V0z" fill="none"></path><path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6-6-6z"></path></svg></span></li>
                <li>Post a Question</li>
            </ul>
        </div><!-- end filters -->

        <form action="#" class="row">
            <div class="col-lg-12">
                <div class="card card-item">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="fs-14 text-black fw-medium lh-20">Post Title</label>
                            <input type="text" id="txtTitle" name="text" class="form-control form--control fs-14" placeholder="Please choose an appropriate title for the post.">
                        </div><!-- end form-group -->
                        <div class="form-group">
                            <label class="fs-14 text-black fw-medium lh-20">Post Content</label>
                            <textarea id="txtPostDetail" name="message" class="form-control form--control user-text-editor" cols="4" rows="6" placeholder="Your awesome description here"></textarea>
                        </div><!-- end form-group -->
                    </div><!-- end card-body -->
                </div>
            </div><!-- end col-lg-8 -->

            <div class="col-lg-6">
                <div class="card card-item">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="fs-14 text-black fw-medium lh-20">Category</label>
                            <select class="form-select">
                                <option value="0">Select a Category</option>
                                <option value="1">Uncategorized</option>
                                <option value="2">Work</option>
                            </select>
                        </div><!-- end form-group -->
                        <div class="form-group mb-0">
                            <label class="fs-14 text-black fw-medium lh-20">Tags</label>
                            <input class="input-tags input--tags selectized" type="text" name="tags" placeholder="e.g. javascript" tabindex="-1" value="" style="display: none;">
                            <div class="selectize-control input-tags input--tags multi plugin-remove_button">
                                <div class="selectize-input items not-full">
                                    <input type="text" autocomplete="new-password" autofill="no" tabindex="" placeholder="e.g. javascript" style="width: 90.5938px; opacity: 1; position: relative; left: 0px;">
                                </div>
                                <div class="selectize-dropdown multi input-tags input--tags plugin-remove_button" style="display: none; width: 351.469px; top: 48px; left: 0px;">
                                    <div class="selectize-dropdown-content" tabindex="-1"></div>
                                </div>
                            </div>
                        </div><!-- end form-group -->
                    </div><!-- end card-body -->
                </div>
            </div><!-- end col-lg-4 -->
            <div class="col-lg-6">
                <div class="card card-item">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="fs-14 text-black fw-medium lh-20">Featured Image</label>
                            <div class="file-upload-wrap file-upload-layout-2">
                                <input type="file" name="files[]" class="multi file-upload-input" multiple>
                                <span class="file-upload-text d-flex align-items-center justify-content-center"><i class="la la-cloud-upload me-2 fs-24"></i>Drop files here or click to upload.</span>
                            </div>
                        </div><!-- end form-group -->
                    </div><!-- end card-body -->
                </div>
            </div>

            <div class="col-lg-12 px-4">
                <!--<div class="card card-item">
                    <div class="card-body"></div>
                </div>-->
                <div class="form-group">
                    <div class="form-check fs-14">
                        <input class="form-check-input" type="checkbox" value="" id="agreeCheckBox">
                        <label class="form-check-label" for="agreeCheckBox">
                            By posting, you agreed to the <a href="terms-and-conditions.html" class="text-color hover-underline">Terms of Service </a> and <a href="privacy-policy.html" class="text-color hover-underline">Privacy Policy.</a>
                        </label>
                    </div>
                </div>
                <div class="form-group mb-0">
                    <button type="button" id="btnCreateBlog" class="btn theme-btn">Publish Your Post</button>
                </div><!-- end form-group -->

            </div>
        </form>
    </div><!-- end container -->
</section><!-- end question-area -->
<!-- ================================ END QUESTION AREA ================================= -->
@section Scripts
{
    <script type="text/javascript" src="~/scripts/User.js"></script>

    <script type="text/javascript">
        $("#btnCreateBlog").click(function () {
            global.executeOrder(this, user.createBlogPost);
        });
    </script>
}